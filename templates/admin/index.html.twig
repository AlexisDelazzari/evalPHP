{# templates/home/index.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
    <form class="form-inline" method="get" action="">
        <div class="d-flex justify-content-between align-items-center w-100">
            <a href="?_locale=fr" class="float-left" onclick="this.submit(); return false;">
                <img class="mr-2 img-fluid" src="{{ asset('images/flags/france.png') }}" alt="French Flag" style="max-width: 100px;">
            </a>
            <a href="{{ path('app_home') }}" class="btn btn-outline-danger">{{ 'Retour'|trans }}</a>
            <a href="?_locale=en" class="float-right" onclick="this.submit(); return false;">
                <img class="img-fluid" src="{{ asset('images/flags/anglais.png') }}" alt="English Flag" style="max-width: 100px;">
            </a>
        </div>
    </form>
    <h1 style="text-align: center; margin-top: 50px;color: #17a2b8; font-weight: bold; margin-bottom: 50px">{{ 'Espace_Admin'|trans }}</h1>
    <div class="container mt-3">


        {% for message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ message }}
            </div>
        {% endfor %}

        <div class="d-flex justify-content-around">
            <div class="card bg-dark mr-3" style="width: 18rem;">
                <div class="card-header" style="font-weight: bold;text-align: center;">
                    {{ 'admin.generate_champ'|trans }}
                </div>
                <div class="card-body" style="text-align: center">
                    <p class="card-text">{{ 'generate_champ.nb_generate'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ generatedChampions }}</p>
                    <p class="card-text">{{ 'generate_champ.nb_validate'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ validatedChampions }}</p>
                    <p class="card-text">{{ 'generate_champ.nb_refuse'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ refusedChampions }}</p>
                    <p class="card-text">{{ 'generate_champ.moyenne'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ averageChampions }} %</p>

                </div>
                <div class="card-footer" style="text-align: center">
                    <p style="text-align: center"><a  href="{{ path('app_champion') }}" class="btn btn-outline-info">{{ 'Voir_en_détail'|trans }}</a></p>
                </div>
            </div>

            <div class="card bg-dark" style="width: 18rem;">
                <div class="card-header" style="font-weight: bold;text-align: center;">
                    {{ 'admin.champion'|trans }}
                </div>
                <div class="card-body" style="text-align: center">
                    <p class="card-text">{{ 'champion.nb_generate'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ champions }}</p>
                    <img src="{{ asset('images/Admin/Champion.png') }}" style="width: 200px; height: 200px; border-radius: 10%; margin-top: 25px">
                </div>
                 <div class="card-footer" style="text-align: center">
                    <p style="text-align: center"><a  href="{{ path('app_champion') }}" class="btn btn-outline-info">{{ 'Voir_en_détail'|trans }}</a></p>
                </div>
            </div>

            <div class="card bg-dark" style="width: 18rem;">
                <div class="card-header" style="font-weight: bold;text-align: center;">
                    {{ 'admin.primary'|trans }}
                </div>
                <div class="card-body" style="text-align: center">
                    <p class="card-text">{{ 'rune.nb_generate_primary'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ primaryRunes }}</p>
                    <p class="card-text">{{ 'rune.nb_generate_secondary'|trans }} : </p>
                    <p style="font-weight: bold;color: #17a2b8;text-align: center">{{ secondaryRunes }}</p>
                    <img src="{{ asset('images/Admin/PrimaryRune.jpg') }}" style="width: 150px; height: 150px; border-radius: 10%; margin-top: 25px">
                </div>
                 <div class="card-footer" style="text-align: center">
                    <p style="text-align: center"><a  href="{{ path('app_champion') }}" class="btn btn-outline-info">{{ 'Voir_en_détail'|trans }}</a></p>
                </div>
            </div>
    </div>

{% endblock %}
