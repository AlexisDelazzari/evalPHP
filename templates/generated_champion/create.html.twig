{% extends 'base.html.twig' %}

{% block title %}Hello SecondaryRuneController!{% endblock %}

{% block body %}

{{ form_start(form) }}
<div class="card mt-3 bg-dark text-white text-center" style="margin-left: 10%; margin-right: 10%; border: 1px solid white; border-radius: 25px;">
    <div class="card-header text-center"  >
        <div class="form-group" style="width: 50%; margin-left: 25%;">
            {{ form_start(form) }}

                {% for category, choices in form.items.vars.choices %}
                    <h2>{{ category }}</h2>
                    {% for item in choices %}
                        <div>
                            <label>
                                {{ form_widget(form.items[item.value]) }}
                                {{ item.label }}
                            </label>
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_end(form) }}

        </div>
    </div>
</div>

<style>
    li {
        color: red;
    }
{% endblock %}
